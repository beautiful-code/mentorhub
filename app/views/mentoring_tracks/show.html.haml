- breadcrumb :mentoring_tracks, @track

%div{"ng-controller" => "MentoringTrackShowController"}
  #section_index
    .track_info
      %div{:track => ""}
    .sub_nav
      %h4.selected Exercises
    #show_track_sections.show_track_instance
      %div{"ng-repeat" => "section in track.sections track by $index", "section-interactions" => ""}
    .add_exercise.add_exercise_btn
      %a.add_exercise_link{"ng-click" => "add_exercise()"}
        %span +
        Add an exercise

:javascript
  var MentoringTrackShowConfig = {
    track: #{@track.to_json},
    sections: #{@section_interactions.to_json},
    section_new: #{@section_interaction_new.to_json}
  };
