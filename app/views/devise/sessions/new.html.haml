.form_style
  %h2 Log in
  =link_to user_omniauth_authorize_path(:google_oauth2),class:"google_login btn" do
    %i.fa.fa-google-plus-official(aria-hidden="true")
    Log in with Google
  %p or
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.email_field :email, autofocus: true, placeholder: "EMAIL ADDRESS"
    .field
      = f.password_field :password, autocomplete: "off", placeholder: "PASSWORD"
    .actions
    = f.submit "Log in", class:"btn action_btn"
  = link_to "Forgot password?", new_password_path(resource_name)
  %hr
  %h2 I'm new here
  = link_to "Sign up", new_registration_path(resource_name)