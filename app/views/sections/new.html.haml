- if @section.errors.any?
  .row
    .alert.alert-danger.col-md-8.col-md-offset-2
      %ul
        - @section.errors.full_messages.each do |error|
          %li= error
.cover_photo
  .logo_track
    = image_tag @track.image
  .content_cover
    %h3
      = @track.name
    .progress_bar
.sub_nav
  %h4.selected Exercises
=render 'form'
