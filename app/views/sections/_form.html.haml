.add_exercise
  -breadcrumb :new_section, @track
  =form_for [@track, @section] do |f|
    .input_box
      =f.text_field :title, id: 'ex_name'
      =label_tag 'ex_name', 'Exercise name' ,class:"label_transition"
    =f.hidden_field :goal, class: "",placeholder: "EXERCISE GOAL"
    .input_box
      =f.text_area :content, id: "ex_description" , rows: "5"
      =label_tag 'ex_description', 'Exercise description' ,class:"label_transition"
      
    .resources
      %h4 Resources
      #resources
      - if @section.resources.present?
        - @section.resources.each do |name, url|
          = render 'resource_field', name: name, url: url
      %button.add_resource_btn#add_field{:href => "javascript:;", type: "button"}
        %span +
        Add A Resource
    .btn_save
      =f.submit "save"
  .hide#new_resource_field
    = render 'resource_field', name: nil, url: nil
