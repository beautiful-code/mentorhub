%div{"ng-controller" => "OrganizationController"}
  %div.col-md-6.col-md-offset-3.form-horizontal{"ng-if" => "update"}
    %div.form-group
      %input.form-control{"ng-model" => "current_user.first_name", :disabled => "disabled"}
    %div.form-group
      %input.form-control{"ng-model" => "organization.name"}
    %div.form-group
      %input.form-control{"ng-model" => "current_user.email", :disabled => "disabled"}
    %input{:type => "submit", "ng-click" => "updateOrganization()"}
  %div{"ng-if" => "!update"}
    %pre {{organization | json}}

:javascript
  var OrganizationConfig = {
    current_user: #{@current_user.to_json},
    organization: #{@organization.to_json}
  };
